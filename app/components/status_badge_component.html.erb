<%= tag.span class: ["inline-block text-xs font-medium ml-2 me-2 px-2.5 py-0.5 rounded-sm", {
"bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300": @status == "not_started",
"bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300": @status == "in_progress",
"bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300": @status == "done"
}] do %>
  <%= @status.humanize %>
<% end %>