<div id="<%= dom_id project %>" class="w-full sm:w-auto my-5 space-y-5">
  <h1 class="font-bold text-4xl"><%= project.name %></h1>
  <%= project.status %>

  <% if @status_changes.present? %>
    <h2 class="text-2xl">Project history</h2>
    <ol>
      <% @status_changes.each do |change| %>
        <li><%= change[:status][0] %> -> <%= change[:status][1] %> - <%= change[:created_at] %>
      <% end %>
    </ol>
  <% end %>
</div>
